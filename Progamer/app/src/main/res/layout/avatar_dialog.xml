<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/avatarDialogRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarDialogCircleImageView"
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:src="@drawable/avatar_0"
            android:layout_gravity="center"
            app:civ_border_width="0dp"
            app:civ_border_color="@color/accent"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/avatarDialogTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Select a new avatar"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/avatarGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:background="@color/primary_background"
            android:verticalSpacing="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:gravity="end|center_vertical">

        <Button
            android:id="@+id/avatarDialogCancelButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:minWidth="64dp"
            android:text="Cancel"
            android:textColor="@color/accent"
            android:textSize="14sp" />

        <Button
            android:id="@+id/avatarDialogAcceptButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:minWidth="64dp"
            android:text="Accept"
            android:textColor="@color/accent"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>